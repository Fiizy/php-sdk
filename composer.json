{
    "name": "fiizy/fiizy-api-sdk",
    "description": "Fiizy API PHP SDK",
    "keywords": [
        "fiizy"
    ],
    "license": "MIT",
    "require": {
        "php": ">= 5.6.0",
        "ext-curl": "*",
        "ext-json": "*",
        "psr/http-message": "1.*",
        "psr/simple-cache": "1.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "3.*",
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "Fiizy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fiizy\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@php -d date.timezone=UTC ./vendor/bin/phpunit -c phpunit.xml"
        ],
        "lint": [
            "vendor/bin/php-cs-fixer fix --no-interaction --dry-run --diff"
        ],
        "fix": [
            "vendor/bin/php-cs-fixer fix"
        ]
    }
}
